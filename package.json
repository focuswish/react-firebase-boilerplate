{
  "name": "react-firebase-boilerplate",
  "version": "1.0.1",
  "description": "Firebase/React sample project",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./src/server",
    "dev": "NODE_ENV=development webpack-dev-server",
    "build": "NODE_ENV=production webpack -p --define process.env.NODE_ENV=production",
    "prod": "npm run build && npm run start",
    "lint": "eslint ./src",
    "test": "NODE_ENV=test nyc mocha",
    "travis-test": "nyc ./node_modules/.bin/mocha",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/focuswish/react-firebase-boilerplate.git"
  },
  "author": "Ben Gardner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/focuswish/react-firebase-boilerplate/issues"
  },
  "homepage": "https://github.com/focuswish/react-firebase-boilerplate#readme",
  "dependencies": {
    "env2": "^2.2.0",
    "express": "^4.15.3",
    "firebase": "^4.1.3",
    "firebase-admin": "^5.0.1",
    "graphql": "^0.10.3",
    "opn": "^5.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-dom": "^15.4.1",
    "react-router": "^4.1.1",
    "reactfire": "^1.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.29.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "style-loader": "^0.18.2",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "node": true
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
